<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#3E109A"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".perfil" tools:ignore="ExtraText">


    <ImageView
            android:layout_width="303dp"
            android:layout_height="71dp" app:srcCompat="@drawable/captura_de_tela_2024_02_20_100112"
            android:id="@+id/imageView7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.809"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/__removebg_preview"
            android:id="@+id/ftperfil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.369"
            android:clickable="true"
            android:onClick="selectImageFromGallery"/>

    <ImageView
            android:layout_width="144dp"
            android:layout_height="77dp" app:srcCompat="@drawable/noite" android:id="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="303dp"
            android:layout_height="61dp" app:srcCompat="@drawable/captura_de_tela_2024_02_20_100112"
            android:id="@+id/imageView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.695"
    />
    <TextView
            android:id="@+id/textView2"
            android:layout_width="133dp"
            android:layout_height="61dp"
            android:textColor="#FFFFFF"
            android:text="Perfil"
            android:textSize="36sp"
            app:fontFamily="@font/inter_semibold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.079"/>
    <!-- Adicione EditText para nome -->

    <!-- Adicione EditText para senha -->
    <!-- Aplicando o botão arredondado -->

    <Button
            android:text="continuar"
            android:layout_width="121dp"
            android:onClick="continuarr"
            android:layout_height="48dp"
            android:textColor="#FFFFFF"
            android:id="@+id/continuarr"
            tools:ignore="MissingConstraints,OnClick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.937"
            android:background="@drawable/rounded_button"/>
    <EditText
            android:id="@+id/editTextNome"
            android:layout_width="277dp"
            android:layout_height="44dp"
            android:background="@android:color/transparent"
            tools:ignore="TouchTargetSizeCheck"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.689"/>
    <EditText
            android:id="@+id/editTextSenha"
            android:layout_width="282dp"
            android:layout_height="36dp"
            android:inputType="textPassword"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.787" app:layout_constraintHorizontal_bias="0.496"/>
    <TextView
            android:text="Senha:"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            tools:ignore="MissingConstraints"
            app:fontFamily="@font/inter_semibold" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.189"
            app:layout_constraintVertical_bias="0.741"/>
    <TextView
            android:text="Nome de Usuário:"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            tools:ignore="MissingConstraints"
            app:fontFamily="@font/inter_semibold" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.237"
            app:layout_constraintVertical_bias="0.639"/>
</android.support.constraint.ConstraintLayout>
